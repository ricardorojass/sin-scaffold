<div class="col-sm-12">
  <h1>Articles</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Author</th>
          <th>Content</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @articles.each do |article| %>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.author_id %></td>
          <td><%= article.body %></td>
          <td><%= link_to "Show", article%></td>
          <td><%= link_to "Edit", article%></td>
          <td><%= link_to "Delete", article%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 